@model List<Cadeteria.ViewModels.PedidoViewModel>

@{
    ViewData["Title"] = "Lista de pedidos";
}

<section>
    <article>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Observacion</th>
                    <th>Estado</th>
                    <th>Precio</th>
                    <th>Borrar</th>
                    <th>Modificar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Pedido in @Model)
                {
                    <tr>
                        <td>@Pedido.Id</td>
                        <td>@Pedido.Observaciones</td>
                        <td>@Pedido.Estado</td>
                        <td>@Pedido.Precio</td>
                        <td>@Html.ActionLink("Eliminar", "Baja_Pedidos", "Pedidos", new{_Id_Pedido = Pedido.Id})</td>
                        <td>@Html.ActionLink("Modificar", "Modificar_Pedidos", "Pedidos", new{_Id_Pedido = Pedido.Id})</td>
                    </tr>
                }
            </tbody>
        </table>
    </article>
</section>