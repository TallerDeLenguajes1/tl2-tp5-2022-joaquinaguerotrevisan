@model List<Cadeteria.ViewModels.CadeteViewModel>

@{
    ViewData["Title"] = "Lista de cadetes";
}

<section>
    <article>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Domicilio</th>
                    <th>Telefono</th>
                    <th>Borrar</th>
                    <th>Modificar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Cadete in @Model)
                {
                    <tr>
                        <td>@Cadete.Id</td>
                        <td>@Cadete.Nombre</td>
                        <td>@Cadete.Domicilio</td>
                        <td>@Cadete.Telefono</td>
                        <td>@Html.ActionLink("Eliminar", "Baja_Cadetes", "Cadetes", new{_Id_Cadete = Cadete.Id})</td>
                        <td>@Html.ActionLink("Modificar", "Modificar_Cadetes", "Cadetes", new{_Id_Cadete = Cadete.Id})</td>
                    </tr>
                }
            </tbody>
        </table>
    </article>
</section>